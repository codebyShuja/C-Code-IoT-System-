  //-----------------------------------------------------------------------
  //------------------------Elbow Conotrol code here-----------------------
  //-----------------------------------------------------------------------
     void LeftelbowUp()
  {  servoLeftelbow.write(180);
    }
     void LeftelbowDown()
  {  servoLeftelbow.write(90);
    }
     void RightelbowUp()
  {  servoRightelbow.write(180);
    }
     void RightelbowDown()
  {  servoRightelbow.write(90);
    }
  //-----------------------------------------------------------------------
  //-------------------------Arms Conotrol code here-----------------------
  //-----------------------------------------------------------------------
    void LeftArmUp()
    {  servoLeftArm.write(180);
      }
    void LeftArmDown()
    {  servoLeftArm.write(90);
      }
    void RightArmUp()
    {  servoRightArm.write(180);
      }
    void RightArmDown()
    {  servoRightArm.write(90);
      }






  
